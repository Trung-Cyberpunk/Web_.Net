@model _19T1021256.DomainModels.Category
@{
    ViewBag.Title = "Cập nhật loại hàng mới";
}

<div class="box box-primary">
    <div class="box-header">
        <form class="form-horizontal" action="~/Category/Save" method="post">

            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.CategoryID)

            @Html.ValidationSummary("", new { @style = "color:#f00" })

            <div class="form-group">
                <label class="control-label col-sm-2">Tên loại hàng:</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.CategoryName,
                  new { @class = "form-control",
                      @placeholder = "", @autofocus = "autofocus"
                       })
                    @Html.ValidationMessageFor(m => m.CategoryName, "", new { @style = "color:#f00" })
                    
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả loại hàng:</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Description,
                  new
                       {
                           @class = "form-control",
                      @placeholder = "",
                           @autofocus = "autofocus"
                       })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @style = "color:#f00" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Category" class="btn btn-warning">
                        Quay lại
                    </a>
                    @*<button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-save">Lưu dữ liệu</i>

                    </button>
                    <a href="~/Category/Index">
                        <i class="btn btn-warning">
                            Quay lại
                        </i>
                    </a>*@
                </div>
            </div>
        </form>
    </div>
</div>

