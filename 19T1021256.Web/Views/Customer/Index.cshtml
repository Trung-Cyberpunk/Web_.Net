@model _19T1021256.Web.Models.PaginationSearchInput
@{
    ViewBag.Title = "Quản Lý Khách Hàng";
}
<div class="box box-primary">
    <div class="box-body">
        <form id="formSearch" action="~/Customer/Search">
            <div class="input-group">
                <input type="hidden" name="PageSize" value="@Model.PageSize" />
                <input type="text" class="form-control" placeholder="Search" name="SearchValue" value="@Model.SearchValue">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i> Tìm kiếm
                    </button>
                    <a href="~/Category/Create" class="btn btn-primary">
                        <i class="glyphicon glyphicon-plus"></i> Bổ Sung
                    </a>
                </div>
            </div>
        </form>
        <div id="searchResult"></div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#formSearch").submit(function (e) {
                e.preventDefault();
                doSearch(1);
                return;
            });
            doSearch(@Model.Page);
        })
        function doSearch(page) {
            var url = $("#formSearch").prop("action");
            var postData = $("#formSearch").serializeArray();
            postData.push({ "name": "page", "value": page });

            $.ajax({
                url: url,
                type: "POST",
                data: postData,
                error: function () {
                    alert("Your request is not valid!");
                },
                success: function (data) {
                    $("#searchResult").html(data);
                }
            });

            return;
        }
    </script>

}





