@model _19T1021256.Web.Models.CustomerSearchOutput
@{
    Layout = null; }
<p>Có <strong> @string.Format("{0:N0}", Model.RowCount) </strong>Khách hàng trong tổng số <strong> @string.Format("{0:N0}", Model.PageCount) </strong>Trang</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr class="bg-primary">
            <th>Tên nhà khách hàng</th>
            <th>Tên giao dịch</th>
            <th>Địa chỉ</th>
            <th>Thành phố</th>
            <th>Mã bưu chính</th>
            <th>Quốc gia</th>
            <th>

            </th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {   // Danh sách các Customer
        <tr>
            <td>@item.CustomerName</td>
            <td>@item.ContactName</td>
            <td>@item.Address</td>
            <td>@item.City</td>
            <td>@item.PostalCode</td>
            <td>@item.Country</td>
    
            <td>
                <a href="~/Supplier/Edit/@item.CustomerID" class="btn btn-sm btn-success">
                    <i class="glyphicon glyphicon-edit"></i>

                </a>
                <a href="~/Supplier/Delete/@item.CustomerID" class="btn btn-sm btn-danger">
                    <i class="glyphicon glyphicon-trash"></i>
                </a>
            </td>
        </tr>
        }

    </tbody>
</table>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
 }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
}
        }
    </ul>
</div>



