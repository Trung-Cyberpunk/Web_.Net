@model _19T1021256.Web.Models.ShippersSearchOutput

@{ Layout = null; }

<p>Có <strong> @string.Format("{0:N0}", Model.RowCount) </strong>Nhà cung cấp trong tổng số <strong> @string.Format("{0:N0}", Model.PageCount) </strong>Trang</p>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr class="bg-primary">
            <th>Tên người giao hàng</th>
            <th>Số điện thoại</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
        <tr>
            <td>@item.ShipperName</td>
            <td>@item.Phone</td>
            
            <th> 
            <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-sm btn-success">
                <i class="glyphicon glyphicon-edit"></i>
            </a>
            <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-sm btn-danger">
                <i class="glyphicon glyphicon-trash"></i>
            </a>
            </th>
            
        </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>