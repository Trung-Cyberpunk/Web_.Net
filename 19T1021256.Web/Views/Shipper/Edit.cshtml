@model _19T1021256.DomainModels.Shippers
@{
    ViewBag.Title = "Cập Nhật Người Giao Hàng";
}

<div class="box box-primary">
    <div class="box-header">
        <form class="form-horizontal" action="~/Shipper/Save" method="post">

            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @style = "color:#f00" })

            <div class="form-group">
                <label class="control-label col-sm-2">Tên người giao hàng:</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.ShipperName,
                   new
                        {
                            @class = "form-control",
                       @placeholder = "",
                            @autofocus = "autofocus"
                        })
                    @Html.ValidationMessageFor(m => m.ShipperName, "", new { @style = "color:#f00" })
                   
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại:</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Phone,
                  new
                       {
                           @class = "form-control",
                      @placeholder = "",
                           @autofocus = "autofocus"
                       })
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @style = "color:#f00" })

                   
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Shipper" class="btn btn-warning">
                        Quay lại
                    </a>
                    @*<button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-save">Lưu dữ liệu</i>

                    </button>
                    <a href="~/Shipper/Index">
                        <i class="btn btn-warning">
                            Quay lại
                        </i>
                    </a>*@
                </div>
            </div>
        </form>
    </div>
</div>
