@model _19T1021256.DomainModels.Employee
@{
    ViewBag.Title = "Cập nhật nhân viên";
}


<div class="box box-primary">
    <div class="box-header">
        <form class="form-horizontal" action="~/Employee/Save" method="post" enctype="multipart/form-data">

            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.EmployeeID)
            @Html.ValidationSummary("", new { @style = "color:#f00" })

            <div class="form-group">
                <label class="control-label col-sm-2">Họ:</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.LastName, new { @class = "form-control", @placeholder = "" })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color:#f00" })

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên:</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.FirstName, new { @class = "form-control", @placeholder = "" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @style = "color:#f00" })

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Chọn ảnh:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*" onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="birthdate">Ngày sinh:</label>
                <div class="col-sm-10">

                    <input type="text" name="birthday" class="form-control" id="birthdate" placeholder="Nhập ngày sinh" value="@string.Format("{0:dd/MM/yyyy}", Model.BirthDate)">
                    @Html.HiddenFor(m => m.BirthDate)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú:</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Notes, new { @class = "form-control", @placeholder = "" })
                    @Html.ValidationMessageFor(m => m.Notes, "", new { @style = "color:#f00" })


                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Email, new { @class = "form-control", @placeholder = "" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:#f00" })


                </div>



            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="hidden" name="Photo" value="@Model.Photo" />
                    <img id="Photo" src="~/@Model.Photo" class="img img-bordered" style="width:200px;" />
                </div>
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Employee" class="btn btn-warning">
                        Quay lại
                    </a>
                   @* <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Thêm dữ liệu
                    </button>
                    <a href="~/Employee" class="btn btn-warning">
                        Quay lại

                    </a>*@
                </div>
            </div>
        </form>
    </div>
</div>

